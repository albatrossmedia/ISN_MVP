# ===================================
# ISN BACKEND ENVIRONMENT VARIABLES
# ===================================

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=isn_db
DB_USER=isn_user
DB_PASSWORD=your_secure_password_here
DB_CONNECTION_LIMIT=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./credentials/gcp-service-account.json
GCP_BUCKET_NAME=isn-media-storage

# Google Cloud Speech-to-Text
GCP_SPEECH_LANGUAGE_CODE=hi-IN
GCP_SPEECH_MODEL=chirp

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=whisper-1

# Storage Configuration (S3/Wasabi/GCS)
STORAGE_PROVIDER=gcs
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=isn-storage

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@indicsubtitlenet.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Monitoring & Observability
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# BullMQ Job Configuration
BULLMQ_CONCURRENCY=5
JOB_TIMEOUT_MS=600000

# API Keys for Partners
CLIENT_API_KEY=your_client_api_key_here

# Feature Flags
ENABLE_HYBRID_MODE=true
ENABLE_GEMINI=true
ENABLE_WHISPER=true
ENABLE_SQI_TRACKING=true

# URLs
CLIENT_DASHBOARD_URL=http://localhost:5173
ADMIN_PANEL_URL=http://localhost:5174
